<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

   <androidx.constraintlayout.widget.ConstraintLayout
       android:layout_width="340dp"
       android:layout_height="150dp"
       android:background="@drawable/login_white_bg"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent">

      <TextView
          android:id="@+id/tv_info"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="30dp"
          android:gravity="center"
          android:text="确定要退出登录吗"
          android:textColor="@color/main_tv"
          android:textSize="14dp"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          />

      <TextView
          android:id="@+id/tv_ok"
          android:layout_width="0dp"
          android:layout_height="40dp"
          android:layout_marginTop="30dp"
          android:background="@drawable/login_login_bg"
          android:gravity="center"
          android:text="确定"
          android:textColor="@color/white"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toStartOf="@+id/tv_cancel"
          app:layout_constraintTop_toBottomOf="@+id/tv_info"
          android:layout_marginStart="20dp"
          android:layout_marginEnd="20dp"
          />

      <TextView
          android:id="@+id/tv_cancel"
          android:layout_width="0dp"
          android:layout_height="40dp"
          android:layout_marginTop="30dp"
          android:layout_marginStart="20dp"
          android:layout_marginEnd="20dp"
          android:background="@drawable/cancel_gray_bg"
          android:gravity="center"
          android:text="取消"
          android:textColor="@color/white"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toEndOf="@+id/tv_ok"
          app:layout_constraintTop_toBottomOf="@+id/tv_info"
          />

   </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>